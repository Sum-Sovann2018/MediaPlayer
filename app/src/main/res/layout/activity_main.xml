<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:onClick="Demo"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="92dp"
            android:onClick="Demo" app:layout_constraintStart_toEndOf="@+id/start" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startnew"
            android:layout_marginEnd="184dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="444dp" android:onClick="Demo" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>